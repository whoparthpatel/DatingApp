<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.SelectEnterActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Find Your"
    android:textSize="@dimen/_42sdp"
    android:textColor="@color/blue"
    android:textFontWeight="700"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_100sdp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfect match"
        android:textSize="@dimen/_42ssp"
        android:textColor="@color/blue"
        android:textFontWeight="700"
        android:layout_marginLeft="@dimen/_20sdp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textSize="@dimen/_42ssp"
        android:textColor="@color/blue"
        android:textFontWeight="700"
        android:layout_marginLeft="@dimen/_20sdp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18ssp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/black"
        android:text="We know, finding love can be hard,"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18ssp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textColor="@color/black"
        android:text="We think it should not be"
        />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_130sdp"
        android:backgroundTint="@color/blue"
        android:background="@drawable/button_background"
        android:textAllCaps="false"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:text="Login"
        />
    <Button
        android:id="@+id/signup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/blue"
        android:background="@drawable/button_background"
        android:textAllCaps="false"
        android:text="Sign Up"
        />

</LinearLayout>
</layout>